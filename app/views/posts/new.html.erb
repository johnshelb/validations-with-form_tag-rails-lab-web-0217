<%if @post.errors.any?%>
<h2>There were some errors:</h2>
<ul>
  <%@post.errors.full_messages.each do |message|%>
  <li><%=message%></li>
  <%end%>
</ul>
<%end%>

<%=form_tag posts_path do%>
<div class="field <%" field_with_errors" if @person.errors[:title].any?%>">
<%=text_field_tag :'post[:title]'%></div>
<div class="field <%" field_with_errors" if @person.errors[:category].any?%>">
<%=text_field_tag :'post[:category]'%></div>
<div class="field <%" field_with_errors" if @person.errors[:content].any?%>">
<%=text_field_tag :'post[content]'%></div>
<%=submit_tag "Submit Post" %>
<%end%>
